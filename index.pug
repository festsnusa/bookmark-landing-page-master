    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Bookmark landing page
    link(rel="icon" type="image/png" sizes="32x32" href="./images/favicon-32x32.png")
    link(rel="stylesheet", href="./assets/styles/style.css")
  body 
    header.header
      .header__nav
        a.header__link(href="#" aria-label="home") 
          img.header__logo(src="./assets/images/logo-bookmark.svg", alt="bookmark")
        img.header__burger(src="./assets/images/icon-hamburger.svg", alt="menu")
        +list(["features", "pricing", "contact"])
    main.main
      .main__box
        img.main__image(src="./assets/images/illustration-hero.svg", alt="hero")
        section.article 
          h1.article__title A Simple Bookmark Manager
