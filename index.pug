mixin list(arr)
  .header__list
    ul.header__links
      each value in arr
        li.header__item
          a(href="#!" aria-label=value)= value
      a(href="#!" aria-label="login")
        li.header__button login
    .header__brands 
      +brands

mixin details(data)
  each value in data
    -let detailsClass= (value["active"]) ? `details__item_active` : ``
    .details__item(class= detailsClass)
      img.details__image(src= value["src"], alt= value["title"])
      .details__box
        h1.details__title= value["title"]
        p.details__subtitle= value["subtitle"]
        a(href="#!" aria-label="more info") 
          .details__button More Info

mixin extensions(data)
  h1.extensions__title Download the extension
  p.extensions__subtitle We’ve got more browsers in the pipeline. Please do let us know if you’ve got a favourite you’d like us to prioritize.
  .extensions__box
    each value in data
      .extensions__item 
        img.extensions__image(src=`./assets/images/logo-${value["title"]}.svg`, alt= value["title"])
        p.extensions__caption Add to 
          span.extensions__span= value["title"]
        p.extensions__version= `Minimum version ${value["version"]}`
        .extensions__button= `Add & Install Extension`

mixin questions(data)
  h1.questions__title Frequently Asked Questions
  p.questions__subtitle Here are some of our FAQs. If you have any other questions you’d like answered please feel free to email us.
  each value in data 
    .questions__item
      .questions__header
        p.questions__question= value["title"]
        img.questions__icon(src="./assets/images/icon-arrow.svg")
      p.questions__answer= value["subtitle"]
  .questions__button More Info

mixin brands
  a(href="https://www.facebook.com" aria-label="facebook" target="_blank") 
    img(src="./assets/images/icon-facebook.svg", alt="facebook")    
  a(href="https://www.twitter.com" aria-label="facebook" target="_blank") 
    img(src="./assets/images/icon-twitter.svg", alt="twitter")  

